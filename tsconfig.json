{
    "compilerOptions": {
        "outDir": "./built",
        "allowJs": true,
        "target": "esnext",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "rootDir": "./src",
        "lib": ["esnext"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ],
    "typeRoots": ["node_modules/@types", "types"],
    "compileOnSave": true
}